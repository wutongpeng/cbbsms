<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sensor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
 <application android:allowBackup="true"
     android:icon="@drawable/appicon" 
     android:label="@string/app_name">
        <activity android:name=".Login"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
 <activity android:name=".MainActivity"
                  android:label="@string/app_name">
        </activity>
		<activity  android:name=".CoActivity"
			android:label="@string/addoutaccount">
		</activity>
		
		<activity  android:name=".HumidityActivity"
			android:label="@string/addinaccount">
		</activity>
		<activity
            android:name=".HumidityActivityManage">
        </activity>
        <activity
            android:name=".Sysset">
        </activity>
		<activity
            android:name=".CoActivityManage">
        </activity>
		<activity  android:name=".LampActivity"
			android:label="@string/outaccountinfo">
		</activity>
		
		<activity  android:name=".MotordriverActivity"
			android:label="@string/showinfo">
		</activity>
		<activity  android:name=".SettingActivity"
			android:label="@string/sysset">
		</activity>
		<activity  android:name=".SmokeActivity"
			android:label="@string/flagmanage">
		</activity>
		 <activity
            android:name=".SmokeActivityManage">
        </activity>
